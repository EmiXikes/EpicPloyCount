            <!--#region Title Bar-->
            <!--#region E icon-->

            <Grid x:Name="MainWindow_Logo_Blue" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="25" 
                 Cursor="SizeAll">
