            <Rectangle x:Name="MainWindow_Border_TopLarge" 
                       Fill="{DynamicResource Epic.Colors.Accent.Mix.1.Normal}" Height="10" 
                       Margin="63.542,0,21.417,0" VerticalAlignment="Top"/>
